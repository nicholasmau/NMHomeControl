# Backend Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# HTTPS Configuration
HTTPS_ENABLED=true
CERT_PATH=./certs/server.crt
KEY_PATH=./certs/server.key

# SmartThings API
SMARTTHINGS_TOKEN=your_personal_access_token_here
SMARTTHINGS_API_URL=https://api.smartthings.com/v1

# Google Home API (Placeholder for future)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Configuration
SESSION_SECRET=change_this_to_a_random_string_min_32_chars
SESSION_TIMEOUT_MINUTES=30

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://localhost:5173,https://192.168.1.0/24
